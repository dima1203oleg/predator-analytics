# Predator Analytics v19.0 - Environment Variables
# Copy this file to .env and fill in the values

# ================================
# Application
# ================================
APP_NAME="Predator Analytics"
APP_VERSION="19.0.0"
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# ================================
# Database
# ================================
DATABASE_URL=postgresql+asyncpg://predator:predator@localhost:5432/predator_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ================================
# Redis
# ================================
REDIS_URL=redis://localhost:6379/0

# ================================
# LLM Providers (at least one required)
# ================================
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=AIzaSy...
ANTHROPIC_API_KEY=
MISTRAL_API_KEY=
GROQ_API_KEY=

# Default LLM provider: openai, gemini, anthropic, mistral, groq
LLM_DEFAULT_PROVIDER=gemini

# ================================
# Vector Database
# ================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ================================
# Security
# ================================
SECRET_KEY=change-this-to-random-string-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ================================
# Kubernetes / ArgoCD
# ================================
KUBECONFIG_PATH=~/.kube/config
ARGOCD_SERVER=https://argocd.local
ARGOCD_TOKEN=

# ================================
# External APIs
# ================================
PROZORRO_API_URL=https://public.api.openprocurement.org/api/2.5
EDR_API_URL=https://data.gov.ua/api/3/action
NBU_API_URL=https://bank.gov.ua/NBUStatService/v1
CUSTOMS_API_URL=https://cabinet.customs.gov.ua/api
