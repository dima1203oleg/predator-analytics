{
    "name": "Predator Analytics Server",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml",
                "esbenp.prettier-vscode",
                "usernamehw.errorlens",
                "github.copilot",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "donjayamanne.githistory"
            ]
        }
    },
    "remoteUser": "root",
    "mounts": [
        "source=/opt/predator/data,target=/data,type=bind",
        "source=/opt/predator/cache,target=/cache,type=bind",
        "source=/opt/predator/models,target=/models,type=bind"
    ],
    "postCreateCommand": "pip install -r requirements.txt && pip install -r requirements_v4.txt"
}