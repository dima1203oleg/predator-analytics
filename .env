# Predator Analytics Environment Configuration

# Application
APP_NAME=Predator Analytics
APP_VERSION=21.0.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security
SECRET_KEY=dev_secret_key_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
CORS_ORIGINS=["http://localhost:8082","http://localhost:3000","http://localhost:5173"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://predator:predator_password@postgres:5432/predator_db

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Vector DB (Qdrant)
QDRANT_URL=http://qdrant:6333
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Search (OpenSearch)
OPENSEARCH_URL=http://opensearch:9200
OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200

# Object Storage (MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=predator_admin
MINIO_ROOT_PASSWORD=predator_secret_key
MINIO_ACCESS_KEY=predator_admin
MINIO_SECRET_KEY=predator_secret_key
MINIO_BUCKET_NAME=predator-data

# LLM Providers (Add your keys here)
OPENAI_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
MISTRAL_API_KEY=
COHERE_API_KEY=

# Ukrainian Data Sources (Optional - defaults used if empty)
PROZORRO_API_URL=https://public.api.openprocurement.org/api/2.5
EDR_API_URL=https://data.gov.ua/api/3/action
