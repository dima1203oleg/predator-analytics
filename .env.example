# ═══════════════════════════════════════════════════════════════════════════
# PREDATOR ANALYTICS v22.0 - ENVIRONMENT CONFIGURATION
# Copy to .env and configure for your environment
# ═══════════════════════════════════════════════════════════════════════════

# ═══════════════════════════════════════════════════════════════════════════
# APPLICATION
# ═══════════════════════════════════════════════════════════════════════════
APP_NAME="Predator Analytics"
APP_VERSION="22.0.0"
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# ═══════════════════════════════════════════════════════════════════════════
# DATABASE
# ═══════════════════════════════════════════════════════════════════════════
DATABASE_URL=postgresql+asyncpg://predator:predator_password@postgres:5432/predator_db
POSTGRES_USER=predator
POSTGRES_PASSWORD=predator_password
POSTGRES_DB=predator_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ═══════════════════════════════════════════════════════════════════════════
# REDIS
# ═══════════════════════════════════════════════════════════════════════════
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ═══════════════════════════════════════════════════════════════════════════
# SEARCH ENGINES
# ═══════════════════════════════════════════════════════════════════════════
QDRANT_URL=http://qdrant:6333
OPENSEARCH_URL=http://opensearch:9200

# ═══════════════════════════════════════════════════════════════════════════
# OBJECT STORAGE
# ═══════════════════════════════════════════════════════════════════════════
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=predator_admin
MINIO_ROOT_PASSWORD=your_minio_password_here

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - GROQ (Multiple keys for rotation)
# Get keys from: https://console.groq.com/keys
# ═══════════════════════════════════════════════════════════════════════════
GROQ_API_KEY=your_groq_api_key_here
GROQ_API_KEYS=key1,key2,key3,key4
GROQ_MODEL=llama-3.3-70b-versatile

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - GEMINI (Multiple keys for rotation)
# Get keys from: https://aistudio.google.com/app/apikey
# ═══════════════════════════════════════════════════════════════════════════
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEYS=key1,key2,key3,key4,key5
GEMINI_MODEL=gemini-2.0-flash-exp

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - MISTRAL (Multiple keys for rotation)
# Get keys from: https://console.mistral.ai/api-keys
# ═══════════════════════════════════════════════════════════════════════════
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_KEYS=key1,key2,key3,key4
MISTRAL_MODEL=mistral-large-latest

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - HUGGING FACE (Multiple keys for rotation)
# Get keys from: https://huggingface.co/settings/tokens
# ═══════════════════════════════════════════════════════════════════════════
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_API_KEYS=key1,key2,key3,key4

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - OPENROUTER
# Get keys from: https://openrouter.ai/keys
# ═══════════════════════════════════════════════════════════════════════════
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - TOGETHER AI
# Get keys from: https://api.together.xyz/settings/api-keys
# ═══════════════════════════════════════════════════════════════════════════
TOGETHER_API_KEY=your_together_api_key_here

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - COHERE
# Get keys from: https://dashboard.cohere.com/api-keys
# ═══════════════════════════════════════════════════════════════════════════
COHERE_API_KEY=your_cohere_api_key_here

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - OPENAI
# Get keys from: https://platform.openai.com/api-keys
# ═══════════════════════════════════════════════════════════════════════════
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_KEYS=key1,key2,key3

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - DEEPSEEK
# Get keys from: https://platform.deepseek.com/api-keys
# ═══════════════════════════════════════════════════════════════════════════
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - XAI/GROK
# Get keys from: https://x.ai
# ═══════════════════════════════════════════════════════════════════════════
XAI_API_KEY=your_xai_api_key_here
GROK_API_KEY=your_grok_api_key_here

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - CODESTRAL
# Get keys from: https://console.mistral.ai
# ═══════════════════════════════════════════════════════════════════════════
CODESTRAL_API_KEY=your_codestral_api_key_here

# ═══════════════════════════════════════════════════════════════════════════
# LLM PROVIDERS - OLLAMA (Local)
# ═══════════════════════════════════════════════════════════════════════════
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:7b

# ═══════════════════════════════════════════════════════════════════════════
# LLM DEFAULT SETTINGS
# ═══════════════════════════════════════════════════════════════════════════
LLM_DEFAULT_PROVIDER=groq
LLM_FALLBACK_CHAIN=groq,gemini,mistral,openrouter,together,ollama

# ═══════════════════════════════════════════════════════════════════════════
# TELEGRAM BOT
# Get token from: https://t.me/BotFather
# ═══════════════════════════════════════════════════════════════════════════
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_ID=your_telegram_user_id_here

# ═══════════════════════════════════════════════════════════════════════════
# GITHUB
# Get token from: https://github.com/settings/tokens
# ═══════════════════════════════════════════════════════════════════════════
GITHUB_TOKEN=your_github_pat_here
GITHUB_REPO=your_username/predator-analytics

# ═══════════════════════════════════════════════════════════════════════════
# ARGOCD
# Get token from ArgoCD UI: Settings > Accounts > Generate new token
# ═══════════════════════════════════════════════════════════════════════════
ARGOCD_SERVER=https://localhost:8080
ARGOCD_TOKEN=your_argocd_token_here
ARGOCD_INSECURE=true

# ═══════════════════════════════════════════════════════════════════════════
# SECURITY
# Generate with: openssl rand -hex 32
# ═══════════════════════════════════════════════════════════════════════════
SECRET_KEY=your_64_char_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=1440
CORS_ORIGINS=["http://localhost:8092","http://localhost:3000"]

# ═══════════════════════════════════════════════════════════════════════════
# EXTERNAL DATA SOURCES
# ═══════════════════════════════════════════════════════════════════════════
PROZORRO_API_URL=https://public.api.openprocurement.org/api/2.5
EDR_API_URL=https://data.gov.ua/api/3/action
NBU_API_URL=https://bank.gov.ua/NBUStatService/v1
CUSTOMS_API_URL=https://cabinet.customs.gov.ua/api

# ═══════════════════════════════════════════════════════════════════════════
# MONITORING
# ═══════════════════════════════════════════════════════════════════════════
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# ═══════════════════════════════════════════════════════════════════════════
# NVIDIA SERVER (if applicable)
# ═══════════════════════════════════════════════════════════════════════════
NVIDIA_SERVER_IP=your_server_ip_here
NVIDIA_SERVER_PORT=22
NVIDIA_SERVER_USER=your_username
